<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    tools:context="com.br.projetoat.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/background_light">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="307dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="43dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="43dp"
        android:layout_marginStart="33dp"
        app:srcCompat="@drawable/bilac" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:text="@string/pin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pin"
            android:textSize="25dp"
            tools:textColor="?android:attr/colorForeground"
            tools:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editPin"
            android:layout_toLeftOf="@+id/editPin"
            android:layout_alignLeft="@+id/imageView2"
            android:layout_alignStart="@+id/imageView2"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"
            android:layout_alignTop="@+id/editPin"
            />

        <EditText
            android:id="@+id/editPin"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/imageView2"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/imageView2"
            android:ems="10"
            android:hint="Digite o PIN"
            android:inputType="phone"
            android:textAlignment="center"
            android:textColor="?android:attr/colorForeground"
            android:textSize="25dp"
            android:maxLength="9"
            tools:textColorHint="?android:attr/colorForeground">
            <requestFocus/>
        </EditText>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">


        <Button
            android:text="@string/comecar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:theme="@style/AppTheme.Button"
            android:id="@+id/comecar" />


        </LinearLayout>

    <Button
        android:id="@+id/sobre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="@string/sobre"
        android:textColor="@color/link"
        android:textSize="20dp" />

</LinearLayout>
