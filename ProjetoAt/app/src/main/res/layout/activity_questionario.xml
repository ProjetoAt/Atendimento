<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="vertical"
    android:background="@android:color/background_light">




    <TextView
        android:text="@string/tempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/tempo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="25dp"
        android:textColor="@color/colorAccent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        >


        <Button
            android:layout_width="100px"
            android:id="@+id/tempo1"
            android:background="@drawable/img1"
            android:layout_height="100px"
            android:layout_marginRight="10dp"
            />

        <Button
            android:layout_width="100px"
            android:id="@+id/tempo2"
            android:background="@drawable/img2"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/tempo1"
            android:layout_toEndOf="@+id/tempo1"
            android:layout_height="100px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <Button
            android:layout_width="100px"
            android:id="@+id/tempo3"
            android:background="@drawable/img3"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/tempo2"
            android:layout_toEndOf="@+id/tempo2"
            android:layout_height="100px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <Button
            android:layout_width="100px"
            android:id="@+id/tempo4"
            android:background="@drawable/img4"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/tempo3"
            android:layout_toEndOf="@+id/tempo3"
            android:layout_height="100px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>


        <Button
            android:layout_width="100px"
            android:id="@+id/tempo5"
            android:background="@drawable/img5"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/tempo4"
            android:layout_toEndOf="@+id/tempo4"
            android:layout_height="100px"
            android:layout_marginLeft="10dp"/>


    </LinearLayout>

    <!--Inicia o Atendente -->
    <TextView
        android:text="@string/atendente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/atendente"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/tempo"
        android:layout_alignEnd="@+id/tempo"
        android:textSize="25dp"
        android:textColor="@color/colorAccent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        >


        <Button
            android:layout_width="100px"
            android:id="@+id/atendente1"
            android:background="@drawable/img1"
            android:layout_height="100px"
            android:layout_marginRight="10dp"/>

        <Button
            android:layout_width="100px"
            android:id="@+id/atendente2"
            android:background="@drawable/img2"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/atendente1"
            android:layout_toEndOf="@+id/atendente1"
            android:layout_height="100px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <Button
            android:layout_width="100px"
            android:id="@+id/atendente3"
            android:background="@drawable/img3"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/atendente2"
            android:layout_toEndOf="@+id/atendente2"
            android:layout_height="100px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <Button
            android:layout_width="100px"
            android:id="@+id/atendente4"
            android:background="@drawable/img4"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/atendente3"
            android:layout_toEndOf="@+id/atendente3"
            android:layout_height="100px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>


        <Button
            android:layout_width="100px"
            android:id="@+id/atendente5"
            android:background="@drawable/img5"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/atendente4"
            android:layout_toEndOf="@+id/atendente4"
            android:layout_height="100px"
            android:layout_marginLeft="10dp" />


    </LinearLayout>

<!-- Inicia o problema -->
    <TextView
        android:text="@string/problema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/problema"
        android:layout_below="@+id/atendente"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="25dp"
        android:textColor="@color/colorAccent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="20dp">


        <Button
            android:layout_width="100px"
            android:id="@+id/problema1"
            android:background="@drawable/img1"
            android:layout_height="100px"
             />

        <Button
            android:layout_width="100px"
            android:id="@+id/problema2"
            android:background="@drawable/img3"
            android:layout_height="100px"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/problema1"
            android:layout_toEndOf="@+id/problema1"
            android:layout_marginLeft="80dp" />

        <Button
            android:layout_width="100px"
            android:id="@+id/problema3"
            android:background="@drawable/img5"
            android:layout_height="100px"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/problema2"
            android:layout_toEndOf="@+id/problema2"
            android:layout_marginLeft="80dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="50dp">
        <TextView
            android:id="@+id/suasnotas"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="@string/snotas"
            android:textSize="30dp"
            android:gravity="center"
            android:textColor="@color/colorAccent"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:id="@+id/txttempo"
            android:layout_width="wrap_content"
            android:layout_height="100px"
            android:text="Tempo: "
            android:gravity="center"/>

        <TextView
            android:id="@+id/txtTempoGIF"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_marginRight="10dp"
            android:text="" />

        <TextView
            android:id="@+id/txtatendente"
            android:layout_width="wrap_content"
            android:layout_height="100px"
            android:text="Atendente: "
            android:gravity="center"/>
        <TextView
            android:text=""
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_marginRight="10dp"
            android:id="@+id/txtAtendenteGIF" />
        <TextView
            android:id="@+id/txtresol"
            android:layout_width="wrap_content"
            android:layout_height="100px"
            android:text="Resolução: "
            android:gravity="center"/>
        <TextView
            android:text=""
            android:layout_width="100px"
            android:layout_height="100px"
            android:id="@+id/txtResolGIF" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/fim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fim"
            android:textSize="25dp"
            android:theme="@style/AppTheme.Button"/>
    </LinearLayout>

    <!--
    -->



</LinearLayout>
