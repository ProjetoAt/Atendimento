<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_questionario"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.br.projetoat.Questionario"
    android:background="#7d0000">

    <TextView
        android:text="@string/tempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tempo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:text="@string/problema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="63dp"
        android:id="@+id/problema"
        android:layout_below="@+id/atendente"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:text="@string/atendente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/atendente"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/tempo"
        android:layout_alignEnd="@+id/tempo" />




        <Button
            android:text=""
            android:layout_width="20dp"
            android:layout_marginBottom="306dp"
            android:id="@+id/tempo1"
            android:background="@drawable/img1"
            android:layout_marginTop="63dp"
            android:layout_height="20dp"
            android:elevation="2dp"
            android:layout_above="@+id/atendente"
            android:layout_marginRight="33dp"
            android:layout_marginEnd="33dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tempo"
            android:layout_alignRight="@+id/tempo"
            android:layout_alignEnd="@+id/tempo" />

    <Button
            android:text=""
            android:layout_width="62dp"
        android:id="@+id/tempo4"
            android:background="@drawable/img4"
            android:layout_alignBottom="@+id/tempo3"
            android:layout_toRightOf="@+id/tempo2"
            android:layout_marginLeft="76dp"
            android:layout_marginStart="76dp"
            android:layout_marginRight="41dp"
            android:layout_marginEnd="41dp"
        android:layout_height="71dp"
        android:layout_alignTop="@+id/tempo3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

        <Button
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tempo5"
            android:background="@drawable/img5"
            android:layout_alignLeft="@+id/tempo4"
            android:layout_alignStart="@+id/tempo4"
            android:layout_marginLeft="71dp"
            android:layout_marginStart="71dp"
            android:layout_alignBottom="@+id/tempo4"
            android:layout_alignTop="@+id/tempo4" />

    <Button
        android:text=""
        android:layout_height="96dp"
        android:id="@+id/tempo2"
        android:background="@drawable/img2"
        android:layout_alignBottom="@+id/tempo1"
        android:layout_toEndOf="@+id/tempo1"
        android:layout_alignTop="@+id/tempo1"
        android:layout_width="71dp"
        android:layout_toRightOf="@+id/tempo1" />

    <Button
        android:text=""

        android:id="@+id/tempo3"
        android:background="@drawable/img3"


        android:layout_width="71dp"
        android:layout_alignBottom="@+id/tempo2"
        android:layout_toRightOf="@+id/tempo2"
        android:layout_marginRight="65dp"
        android:layout_marginEnd="65dp"
        android:layout_alignTop="@+id/tempo1"
        android:layout_alignRight="@+id/tempo4"
        android:layout_alignEnd="@+id/tempo4"
        android:layout_height="96dp" />


</RelativeLayout>
