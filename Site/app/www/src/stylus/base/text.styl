text-title()
    font-family 'Open Sans', sans-serif
    font-size 20px
    color $bg-color
    font-weight 400

text-link()
    font-family 'Open Sans', sans-serif
    font-size 14px
    color $bg-color

text-label()
    font-family 'Open Sans', sans-serif
    font-size 14px
    font-weight bold
    color $secondary-color

text-input()
    font-family 'Open Sans', sans-serif
    font-size 14px
    font-weight 100
