/* Painel
======================================== */
.panel 
	background-color #eee
	margin 0 auto
	position relative
	width 450px

.panel__header 
	align-items center
	background-color rgb(181, 18, 27)
	display flex
	height 40px
	padding 0 20px

.panel__title 
	color #fff
	font-family inherit
	font-size 18px

.panel__body 
	display flex
	flex-direction column
	justify-content space-around
	padding 15px	
	padding-bottom 0

.panel__image 
	display block
	margin 0 auto
	margin-bottom 15px





