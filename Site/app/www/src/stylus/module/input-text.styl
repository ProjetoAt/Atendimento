.panel__input 
	background none
	border 1px solid #ccc
	color rgb(56, 58, 58)
	font-family inherit
	font-size 16px
	margin-bottom 10px
	min-height 22px
	text-indent 5px

.panel__input:focus 
	outline thick

.panel__input--line 
	border none
	border-bottom 1px solid rgb(113, 116, 127)
	max-width 270px
	margin-bottom 20px
	margin-left auto
	margin-right auto
	width 100%

.panel__input--bigger
	font-size 34px
	text-align center
	text-indent 0

.panel__input--alone 
	margin-bottom 0

.panel__input--last 
	margin-bottom 0
