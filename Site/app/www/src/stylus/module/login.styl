.login__user
    margin 0 auto
    margin-bottom 10px
    display block
    height 100px
    width 100px
    fill #666

.login__form:last-child
    display flex
    flex-direction column
    align-items center

.login__form__group
    width 100%
    margin 5px 0

.login__form__group
    margin 0
    dev(red)

.login__form__group__label
    display none

.login__form__group__input
    display block
    margin 0 auto
    text-input()
    outline none
    padding 2px