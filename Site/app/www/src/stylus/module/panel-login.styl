.panel-login 
	background-color $bg
	margin 0 auto
	position relative
	width 450px

.panel-login__header 
	align-items center
	background-color $primary
	display flex
	height 40px
	padding 0 20px

.panel-login__title 
	color $bg
	font-family inherit
	font-size 18px

.panel-login__body 
	display flex
	flex-direction column
	justify-content space-around
	padding 15px	

.panel-login__image 
	display block
	margin 0 auto
	margin-bottom 15px
	
.panel-login__form 
	display flex
	flex-direction column
	
.panel-login__label 
	display none 

.panel-login__input-text
	background none
	border none
	border-bottom 1px solid $tertiary
	color $tertiary
	font-family inherit
	font-size 16px
	margin-bottom 20px
	margin-left auto
	margin-right auto
	max-width 270px
	min-height 22px
	text-indent 5px
	width 100%
	opacity .8

.panel-login__input-text:focus 
	outline thick

.panel-login__submit
	align-items center
	background-color $secondary
	border none
	color $bg
	display flex
	font-family inherit
	font-size 16px
	height 40px
	justify-content center
	margin 0 auto
	width 90px

.panel-login__submit:hover 
	cursor pointer
	opacity .9