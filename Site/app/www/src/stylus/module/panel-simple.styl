.panel-simple
	background-color $bg
	margin 0 auto
	position relative
	width 450px

.panel-simple__header 
	align-items center
	background-color $primary
	display flex
	height 40px
	padding 0 20px

.panel-simple__title 
	color $bg
	font-family inherit
	font-size 18px

.panel-simple__body 
	display flex
	flex-direction column
	justify-content space-around
	padding 15px	
	
.panel-simple__form 
	display flex
	flex-direction column
	
.panel-simple__label 
	display none 

.panel-simple__input-text
	background none
	border none
	border-bottom 1px solid $tertiary
	color $tertiary
	font-family inherit
	font-size 16px
	margin-bottom 20px
	margin-left auto
	margin-right auto
	max-width 270px
	min-height 22px
	text-indent 5px
	width 100%
	opacity .8
	
.panel-simple__input-text:focus 
	outline thick

.panel-simple__submit
	align-items center
	background-color $secondary
	border none
	color $bg
	display flex
	font-family inherit
	font-size 16px
	height 40px
	justify-content center
	margin 0 auto
	width 90px

.panel-simple__submit:hover 
	opacity .9
	cursor pointer